                            input(type="email" placeholder="Correo" name="fullname" required class='mtb-5-xs mlr-5-xs')
                            span(class='required') *
                            input(type="phone" placeholder="Teléfono" name="phone" required class='mlr-5-xs mtb-5-xs')
                            span(class='required') *
                            input(class="submit" type="submit" name="submit" value="Enviar" class='width-100-xs')
