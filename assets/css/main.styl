body 
    font-family "san francisco"!important
    font-weight 500!important 
    p 
        font-size 16px
        
.hero
	background-image url('../img/bg.png')
	width 100%
	height 640px
	background-size cover
	background-position-y -81px
	&:before
		content ''
		position: absolute
		top 0
		right 0
		bottom 0
		left 0
		background-image linear-gradient(to bottom, rgba(47, 46, 46, 0.46), rgba(0,0,0,0.45))
		opacity .8	
	.container 
		padding-top 10%
		
	.logo
		background-image url('../img/logo.png')
		height 110px
		width 12%
		background-size cover
		position absolute
		top 8%
		left 5%
	
	.boton-tienda
		position absolute
		top 43%
		left 43.5%
	    
