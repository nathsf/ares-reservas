/*modal ver mas*/
.modal-info 
	position fixed
	font-family Arial, Helvetica, sans-serif
	top 0
	right: 0
	bottom: 0
	left: 0
	background: rgba(0,0,0,0.8)
	z-index 99999
	opacity 0
	-webkit-transition opacity 400ms ease-in
	-moz-transition opacity 400ms ease-in
	transition opacity 400ms ease-in
	pointer-events none
	
	&:target
		opacity 1
		pointer-events auto
	
.modal-info > div 
	color black
	width 75%
	position relative
	margin 8% auto
	padding 3% 6% 5.5% 6%
	border-radius 10px
	background #fff
    
	h2 
		text-transform uppercase
		font-weight bolder
		color black
		font-size 4em
		text-align center
	p 
		color black!important
		font-size 14px
  
.modal-info.home
    div
        width 40%
        margin 20% auto
        padding 3% 6% 5.5% 6%
        border-radius 2px
        box-shadow rgba(0, 0, 0, 0.43) 1px 1px 7px 4px
          
    h3
        color #5b7532    
		

.modalImg
	position fixed
	font-family Arial, Helvetica, sans-serif
	top 0
	right: 0
	bottom: 0
	left: 0
	background: rgba(0,0,0,0.8)
